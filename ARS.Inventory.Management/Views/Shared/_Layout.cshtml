            App.init();
            App.dashboard();

        });
    </script>

    <script>

        var Logout = function () {
            $.ajax({
            url: "/api/Account/Logout",
            method: "POST",
            async: false,
            },
            success: function () {
                toastr.success("Session finished !", { timeOut: 2000 });
                    window.location.href = '/UserManagement/Login';
            },
            error: function (error) {
               toastr.error("Encountered an error !" + error.responseText, { timeOut: 5000 })
            });
        };


    </script>
