@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<ARS.Inventory.Management.Web.Models.OrderViewModel>
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-sm-12" style="margin-top: 30px">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <center>
                    <h2 class="page-head-title"><b><b>@Localizer["Confirmed Orders Screen"]</b></b></h2>
                </center>
                <br><hr>
                <div class="col-sm-4">
                    <div>
                        <a href="@Url.Action("ListOrder","Order")"><button class="btn btn-primary">Back To List</button></a>
                    </div>
                </div><br /><br />
                
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr style="font-size: 16px;  background-color:lavender;">
                                <th width="25%">@Localizer["Product Name"]</th>
                                <th width="20%">@Localizer["User"]</th>
                                <th width="20%">@Localizer["Order Date"]</th>
                                <th width="20%">@Localizer["Confirmed Date"]</th>
                                @*<th width="25%">@Localizer["Confirmed Status"]</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.ConfirmDate</td>
                                    @*<td ><label class="label label-success" style="font-size: 16px;">@item.ConfirmStatus</label>  </td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

</script>