@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ARS.Inventory.Management.Web.Models.CustomerViewModel

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-primary">
            @if (Model != null)
            {
                <div class="panel-heading panel-heading-divider" style="font-size: 22px"><b>@Localizer["Update Customer"]</b></div>
            }
            else
            {
                <div class="panel-heading panel-heading-divider" style="font-size: 22px"><b>@Localizer["Create New Customer"]</b></div>
            }
            <div class="panel-body">
                @if (Model != null)
                {
                    <form action="#" class="form-horizontal group-border-dashed" novalidate="">
                        <br>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Customer Name"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Name" id="name" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Phone Number"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="PhoneNumber" id="phoneNumber" value="@Model.Phone">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Email"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="PhoneNumber" id="phoneNumber" value="@Model.Phone">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Address"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Address" id="address" value="@Model.Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Balance"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Address" id="address" value="@Model.Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Comments"] :</label>
                            <div class="col-sm-6">
                                <textarea class="form-control parsley-error" data-parsley-max="6" data-parsley-id="39" rows="5" id="message">@Model.Comments</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2 col-sm-10 ">
                                <input class="btn btn-space btn-warning kaydet" style="font-size: 16px; height:40px" id="btnUpdate" value="@Localizer["Update"]" onclick="Update(@Model.Id)" />
                                <input class="btn btn-space btn-default kaydet" style="height: 40px; font-size: 14px;" id="btnCancel" onclick="window.location.href ='@Url.Action("ListCustomer","Customer")'" value="@Localizer["Cancel"]" />
                                <input type="hidden" id="_@Model.Id" />
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <form action="#" class="form-horizontal group-border-dashed" novalidate="">
                        <br>
                         <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Customer Name"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Name" id="name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Phone Number"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="PhoneNumber" id="phoneNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Email"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Email" id="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Address"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Address" id="address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Balance"] :</label>
                            <div class="col-sm-6">
                                <input type="text" data-parsley-max="6" min="1" class="form-control parsley-error" data-parsley-id="39" name="Balance" id="balance">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label yazi">@Localizer["Comments"] :</label>
                            <div class="col-sm-6">
                                <textarea class="form-control parsley-error" data-parsley-max="6" data-parsley-id="39" rows="5" id="comments"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2 col-sm-10 ">
                                <input class="btn btn-space btn-success kaydet" style="font-size: 16px; height:40px" id="btnSave" value="@Localizer["Save"]" />
                                <input class="btn btn-space btn-default kaydet" style="height: 40px; font-size: 14px;" id="btnCancel" onclick="window.location.href ='@Url.Action("ListCustomer","Customer")'" value="@Localizer["Cancel"]" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $("#btnSave").click(function () {

        $.ajax({
            url: "/api/Customer",
            method: "POST",
            async: false,
            data: {
                Name: $("#name").val(),
                Phone: $("#phoneNumber").val(),
                Email: $("#email").val(),
                Address: $("#address").val(),
                Balance: $("#balance").val() ?? 0,
                Comments: $("#comments").val() ?? ""
            },
            success: function () {
                toastr.success("Customer has been created successfully !", { timeOut: 3000 });
                window.location.href = "/Customer/ListCustomer";
            },
            error: function (error) {
           toastr.error("Encountered an error !" + error.responseText, { timeOut: 5000 })
        }
        });
    });

   
    var Update = function (purchaseId) {

        $.ajax({
            url: "/api/Customer",
            method: "PUT",
            async: false,
            data: {
                Name: $("#name").val(),
                Phone: $("#phoneNumber").val(),
                Email: $("#email").val(),
                Address: $("#address").val(),
                Balance: $("#balance").val(),
                Comments: $("#comments").val()
            },
            success: function () {
                toastr.success("Customer has been updated successfully !", { timeOut: 3000 });
                window.location.href = "/Customer/ListCustomer";
            },
            error: function (error) {
           toastr.error("Encountered an error !" + error.responseText, { timeOut: 5000 })
        }
        });

    };

</script>